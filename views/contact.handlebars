<style>
    body {
        color: white;
    }

    h4 {
        font-size: 300%;
    }

    p {
        font-size: 150%;
    }

    button {
        color: white;
        border: border: 2px solid black;
        background-color: grey;
        opacity: 0.3;
        border-radius: 15px;
        padding: 10px 25px;
    }

    button:hover {
        opacity: unset;
    }
</style>

<main>
    <h4 class="oneday">
        I'd love to chat
    </h4>
    <br>

    <p class="ebrima">
        Fill in this form to get in contact with me
    </p>
    <br>
    <form method="POST" action="contactme">
        <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com"
                name="email">
        </div>
        <br>
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="First name" name="First">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Last name" name="Last">
            </div>
        </div>
        <br>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Leave your message here</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="6" name="message"></textarea>
        </div>
        <br>
        <div class="col-sm-10">
            <button type="submit">Send</button>
        </div>
    </form>

</main>